{% block nav %}
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Finance App</a>
    </div>

    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="{% if(app.request.attributes.get('_route') == "homepage") %}active{% endif %}"><a href="/">Home <span class="sr-only">(current)</span></a></li>
        
        {% if app.session.get('logged_in') %}
          <li class="{% if(app.request.attributes.get('_route') != "homepage" and app.request.attributes.get('_route') != 'user_sign_in' and app.request.attributes.get('_route') != 'user_sign_up') %}active{% endif %}"><a href="/portfolio" title="Portfolio">Portfolio</a></li>
        {% endif %}
      </ul>
      <ul class="nav navbar-nav navbar-right">
        {% if app.session.get('logged_in') %}
        <p class="navbar-text">
          Signed in as {{ app.session.get('email') }} (<a href="/user/sign_out" class="navbar-link">Sign Out</a>)
        </p>
        {% else %}
          <li><a href="/user/sign_in">Sign In</a></li>
          <li><a href="/user/sign_up">Sign Up</a></li>
        {% endif %}
        
      </ul>
      
    </div>
  </div>
</nav>
{% endblock %}